<div class= "container">
    <form action="/productoForm/producto/operar" method="post">
        <br>
        <input type="hidden" name="_id" value="{{producto._id}}" >
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="{{producto.nombre}}">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio" value="{{producto.precio}}">
        </div>
        <div class="form-group">
            <label for="costo">Costo</label>
            <input type="text" class="form-control" id="costo" name="costo" value="{{producto.costo}}">
        </div>
        <div class="form-group">
            <label for="minimo">Mimino</label>
            <input type="text" class="form-control" id="minimo" name="minimo" value="{{producto.minimo}}">
        </div>

        <button type="submit"  class="btn btn-primary">Grabar</button>        
        <a href="/" class="btn btn-danger">Cancelar</a>

    </form>


</div>